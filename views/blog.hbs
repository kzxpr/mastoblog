<div class="blog--wrap">
    <nav class="blog--menu">
        <ul class="taglist">
            {{#each tags}}
                {{#if (eq this.url_friendly ../tagname)}}
                    <li class="taglist--sel"><a href='/tag/{{this.url_friendly}}'>{{this.name}}</a></li>
                {{else}}
                    <li class="taglist--item"><a href='/tag/{{this.url_friendly}}'>{{this.name}}</a></li>
                {{/if}}
            {{/each}}
        </ul>
        <div></div>
            <b>Followers:</b>
            <div class="followers--box">
            {{#each account.followers}}
                {{#if (notempty this.icon)}}
                    <div class="followers--icon">
                        <a href="{{this.homepage}}" target="_new">
                            <img src="{{this.icon}}" width="50" alt="{{this.displayname}}">
                        </a>
                    </div>
                {{/if}}
            {{/each}}
            </div>
        <div></div>
        <div>
            <ul class="linklist">
                {{#each links}}
                    <li class="linklist--item"><a href='{{this.url}}' target='_new'>{{this.name}}</a></li>
                {{/each}}
            </ul>
        </div>
    </nav>
    <div class="blog--main">
        {{#if (gt (count posts) 0)}}
            {{#each posts}}
                <section class="post--wrap">
                    <div class="post--header">{{this.summary}}</div>
                    <div class="post--body">
                        {{{this.content}}}
                        {{#if this.attachments}}
                            <div>
                                {{#each this.attachments}}
                                    <img src="{{this.url}}" style="width: 100%" />
                                {{/each}}
                            </div>
                        {{/if}}
                    </div>
                    <div>
                        {{#if this.likes}}
                            <div>
                                <ul>
                                    {{#each this.likes}}
                                        <li>{{this.sender}}</li>
                                    {{/each}}
                                </ul>
                            </div>
                        {{/if}}
                    </div>
                    <div class="post--footer">
                        <div class="post--tags">
                            <ul class="post--tags--list">
                                {{#each this.tags}}
                                    {{#if (eq this.url_friendly ../tagname)}}
                                        <li class="taglist--sel"><a href="/tag/{{this.url_friendly}}">{{this.name}}</a></li>
                                    {{else}}
                                        <li class="taglist--item"><a href="/tag/{{this.url_friendly}}">{{this.name}}</a></li>
                                    {{/if}}
                                {{/each}}
                            </ul>
                        </div>
                        <div class="post--date">
                            {{prettydatetime this.createdAt}}
                        </div>
                    </div>
                </section>
            {{/each}}
            <section class="blog--more">
                <a href="/page/{{nextpage}}">MORE!</a>
            </section>
        {{else}}
            <section class="post--empty">
                No (more) posts matches your request...
            </section>
            <section class="blog--more">
                <a href="/">To frontpage</a>
            </section>
        {{/if}}
    </div>
</div>
