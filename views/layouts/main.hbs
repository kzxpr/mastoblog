        <meta property="og:image" content="/public/logo128.png" />
        <link rel="icon" type="image/png" href="/public/logo128.png"/>
        <meta property="og:description" content="{{sitetitle}} - {{sitesubtitle}}. Made with MastoBlog" />
        <meta property="og:title" content="{{#if pagetitle}}{{pagetitle}} //{{/if}}{{sitetitle}}" />
